@model ToDoItem
@{
    Layout = null;
}
<h1>ToDo Edit</h1>

<form action="/todo/Update" method="post">

    <input type="text" name="Title" value="@Model.Title"/>
    @Html.ValidationMessageFor(model => model.Title, null, new { @class = "text-danger" })
    
    @Html.HiddenFor(model => model.Id)

    <div>
        <label for="IsCompleted">Completed</label>
        @Html.CheckBoxFor(model => model.IsCompleted)
        @Html.ValidationMessageFor(model => model.IsCompleted, null, new { @class = "text-danger" })
    </div>

    <input type="submit" value="Save"/>
</form>


<p>@Html.ActionLink("Cancel", "ToDoIndex")</p>